{
	"extends": [
		"standard",
		"plugin:promise/recommended",
		"plugin:react/recommended",
		"plugin:react-native/all"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"standard",
		"promise",
		"react",
		"react-native"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{"SwitchCase" : 1}
		],
		"semi": [
			"error",
			"always"
		],
		"no-tabs": [
			"off"
		],
		"space-before-function-paren": [
			"off"
		],
		"comma-dangle": [
			"off"
		],
		"spaced-comment": [
			"off"
		],
		"react-native/split-platform-components": [
			"off"
		]
	}
}